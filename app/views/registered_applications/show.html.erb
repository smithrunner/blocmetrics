<div class="row">
  <div class="col-md-6 text-center">
    <h1>Application Name</h1>
    <h3><%= @registered_application.name %></h3>
  </div>
  <div class="col-md-6 text-center">
    <h1>Application URL</h1>  
    <h3><%= @registered_application.URL %></h3>
  </div>
</div>

<div class="row">
  <div class="col-md-6 text-center">
    <h1>Event Name</h1>
  </div>
  <div class="col-md-6 text-center">
    <h1>Event Count</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12 text-center">
    <%= pie_chart @registered_application.events.group(:event_name).count %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12 text-center">
    <%= line_chart @registered_application.events.group_by_day(:created_at).count %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12 text-center">
    <%= link_to "Edit", edit_registered_application_path(@registered_application), class: 'btn btn-success' %>
    <%= link_to "Delete App", [@registered_application], method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure you want to un-register this app?"} %>
  </div>
</div>